<% if (success && success.length > 0) { %>
    <div class="alert alert-success alert-dismissible fade show text-center mx-auto mt-3 w-75" role="alert">
        <%= success[0] %>
        <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close">
        </button>
    </div>
<% } %>

<% if (error && error.length > 0) { %>
    <div class="alert alert-danger alert-dismissible fade show text-center mx-auto mt-3 w-75" role="alert">
        <%= error[0] %>
        <button
            type="button"
            class="btn-close"
            data-bs-dismiss="alert"
            aria-label="Close">
        </button>
    </div>
<% } %>
